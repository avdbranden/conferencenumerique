<!-- Mutation -->

<div class="mutation">
	<div class="container text-center">
		<div class="row">
			<div class="col-md-offset-2 col-md-8 col-xs-12">
				<div class="mutation-content">
					<h2>Le monde juridique est en mutation</h2>
					<div class="whitepaper">
						<%= link_to "Lisez l'intervention", "https://drive.google.com/open?id=0B8IrvRDLbpHBOWhNVUU2blVEZUE", target: '_blank', class: "btn btn-danger btn-lg"%>
